	"item": [
		{
			"name": "api",
			"item": [
				{
					"name": "anggota",
					"item": [
						{
							"name": "Login",
							"request": {
								"method": "POST",
								"url": {
									"raw": "{{baseUrl}}/api/anggota/login"
								},
								"body": {
									"mode": "urlencoded",
									"urlencoded": [
										{
											"key": "user",
											"value": "<your_username>",
											"description": "Your username"
										},
										{
											"key": "pass",
											"value": "<your_password>",
											"description": "Your password"
										}
									]
								}
							},
							"response": [
								{
									"name": "Success",
									"body": "{\n    \"status\": 200,\n    \"token\": \"<token_value>\",\n    \"data\": {\n        \"first_name\": \"<your_name>\",\n        \"username\": \"<your_username>\",\n        \"email\": \"<your_email>\",\n        \"tipe\": \"<your_role>\"\n    }\n}"
								}
							]
						},
						{
							"name": "Profile",
							"request": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/api/anggota/profile"
								},
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{jwt_token}}",
										"description": "JWT token from login"
									}
								]
							},
							"response": [
								{
									"name": "Success",
									"body": "{\n    \"success\": true,\n    \"data\": {\n        \"first_name\": \"<your_name>\",\n        \"username\": \"<your_username>\",\n        \"email\": \"<your_email>\",\n        \"tipe\": \"<your_role>\"\n    }\n}"
								}
							]
						},
						{
							"name": "Logout",
							"request": {
								"method": "GET",
								"url": {
									"raw": "{{baseUrl}}/api/anggota/logout"
								},
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{jwt_token}}",
										"description": "JWT token from login"
									}
								]
							},
							"response": [
								{
									"name": "Success",
									"body": "{\n    \"status\": 200,\n    \"messages\": {\n        \"success\": \"User logged out successfully\"\n    }\n}"
								}
							]
						}
					]
				},
